<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nntc.volosov.coursework.UserMainController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Button mnemonicParsing="false" onAction="#showShopWindow" text="Магазин" prefWidth="120.0" prefHeight="40.0" />
        <Button mnemonicParsing="false" onAction="#showInfoWindow" text="О программе" prefWidth="150.0" prefHeight="40.0" />
        <Button mnemonicParsing="false" onAction="#returnToConnectionScreen" text="Подключение к СУБД" prefWidth="180.0" prefHeight="40.0" />
        <Button mnemonicParsing="false" onAction="#handleMenuClose" text="Выход" prefWidth="90.0" prefHeight="40.0" />
    </children>
</VBox>
